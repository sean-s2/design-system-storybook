    "@storybook/react": "^8.6.0",
    "@storybook/react-vite": "^8.6.0",
    "@storybook/storybook-deployer": "^2.8.16",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "bun-types": "^1.2.5",
    "storybook": "^8.6.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
